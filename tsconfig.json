{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "ES2020",
    "module": "CommonJS",
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "composite": true,
    "paths": {
      "@idealgma/*": ["packages/*/src", "apps/*/src"]
    }
  },
  "references": [
    { "path": "packages/datasource" },
    { "path": "apps/slack" },
    { "path": "apps/api" },
    { "path": "apps/shared" }
  ]
}
