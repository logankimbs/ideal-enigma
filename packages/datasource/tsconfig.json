{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "rootDir": "src",
        "outDir": "dist",
        "strictPropertyInitialization": false, // for entities
        "experimentalDecorators": true, // for entities
        "emitDecoratorMetadata": true, // for reflect-metadata
        "skipLibCheck": true, // for @slack/bolt
        "declaration": true,
        "composite": true,
        "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo"
    },
    "include": ["src"]
}