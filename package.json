{
  "name": "ideal-enigma",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "start:slack": "npm run build -workspace=@idealgma/slack && npm run start -workspace=@idealgma/slack",
    "start:api": "npm run build -workspace=@idealgma/api && npm run start -workspace=@idealgma/api",
    "lint": "eslint",
    "test": "jest"
  },
  "devDependencies": {
    "@eslint/js": "^9.10.0",
    "@slack/types": "^2.13.0",
    "@types/jest": "^29.5.13",
    "@types/luxon": "^3.4.2",
    "@types/node-cron": "^3.0.11",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.9.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "nx": "19.8.2",
    "prettier": "3.3.3",
    "ts-jest": "^29.2.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.5.0"
  }
}
